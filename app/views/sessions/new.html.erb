<h1>Login</h1>

<%= form_tag sessions_path do %>
  <div class="error_messages">
    <% if @error %>
      <p><%= @error %></p>
    <% end %>
  </div>
  <p>
    <%= label_tag :email %><br>
    <%= text_field_tag :email %>
  </p>
  <p>
    <%= label_tag :password %><br>
    <%= password_field_tag :password %>
    <p class="button"><%= submit_tag %></p>
  </p>
<% end %>
