<!DOCTYPE html>
<html>
<head>
  <title>Railslist</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h1>Brags List</h1>
  </header>
  <nav>
    <% if !current_user %>
      <%= link_to "Register", controller: "users", action: "create" %>
      <%= link_to "Login", controller: "sessions", action: "create"%>
    <% else %>
      Welcome, <%= link_to "User#{current_user.id}", controller: "users", action: "create" %>
      <%= link_to "Logout", controller: "sessions", action: "delete" %>
    <% end %>
  </nav>

<%= yield %>

</body>
</html>
